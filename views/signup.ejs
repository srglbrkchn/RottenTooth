<%- include('partials/header') %>

<h1>Sign Up <i class="fa fa-pencil" aria-hidden="true"></i></h1>

<div class="signup-content">
<form class="signup-frm" action="/signup" method="post">
  <div class="signup-area">
    <p class="alert"><%= alertText %></p>
    <input class="signup-input username" type="text" name="username" placeholder="Username">
    <input class="signup-input password" type="password" name="password" placeholder="password">
    <button class="signup-btn" type="submit" name="register-btn">Sign Up</button>
  </div>
</form>
<img class="line" src="pictures/line.png" alt="line">
<div class="social-media">
  <a href="/auth/google" role="button">Sign up with google <i class="fa fa-google" aria-hidden="true"></i></a>
  <a href="/auth/facebook" role="button">Sign up with facebook <i class="fa fa-facebook" aria-hidden="true"></i></a>
</div>
</div>

<%- include('partials/footer') %>
